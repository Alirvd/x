_run_git_clone() {
    git clone https://github.com/Alirvd/x
}

_start_bot () {
    echo "⌭ جاري تنزيل اكواد السورس ⌭"
    _run_git_clone
    echo "⌭ تـم التنزيل بنجاح ⌭"
    
    cd x  # Enter the cloned repository directory

    echo "⌭ جـاري بـدء تنصيـب تــيــبثون ⌭ "
    echo ""

    python3 -m zthon  # Run python3 -m zthon inside the cloned repository directory
}

_start_bot
